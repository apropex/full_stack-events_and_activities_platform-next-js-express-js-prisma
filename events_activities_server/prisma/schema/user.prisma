model User {
  id          String    @id @default(uuid())
  name        String
  email       String    @unique
  password    String
  role        Role      @default(USER)
  avatar      String?
  bio         String?
  interests   String[]  // like: ["Hiking", "Music", "Coding"]
  isPremium   Boolean   @default(false)
  createdAt   DateTime  @default(now())
  
}